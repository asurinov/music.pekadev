<!DOCTYPE html>
<html ng-app="app">
<head>
    <base href="/">
    <meta charset="utf-8">
    <title><%= appTitle %></title>
    <!-- inject:css -->
    <!-- endinject -->
    <!-- inject:js -->
    <!-- endinject -->
</head>
<body ng-controller="appController as ac">
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#"><%= appTitle %></a>
        </div>
        <button type="button" class="btn btn-default navbar-btn" ng-hide="isAuthorized" ng-click="login()">Войти</button>
        <form class="navbar-form navbar-right" ng-if="isAuthorized">
            <img class="img-circle" ng-src="{{userInfo.photo_50}}" alt="">
            <span ng-bind="userInfo.last_name"></span>
            <span ng-bind="userInfo.first_name"></span>
        </form>
    </div>
</nav>
<div class="container-fluid">
    <div class="row">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <input type="button" class="btn btn-primary" ng-click="getAudioList()" value="Загрузить список моих аудиозаписей"/>
                </div>
                <div class="row">
                    <form class="form-inline">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Поиск аудиозаписей" ng-model="pattern">
                        </div>
                        <input type="button" class="form-control" value="Искать" ng-click="audioSearch()" ng-disabled="!pattern">
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="row">
                    <form class="form-inline">
                        <div class="form-group pull-right">
                            <span class="form-control" ng-bind="audioPlayer.currentTime | trackTime"></span>
                            <input class="form-control" type=range min=0 max=1 step=0.01 ng-model="audioPlayer.progress"/>
                        </div>
                    </form>
                </div>
                <div class="row">
                    <form class="form-inline">
                        <div class="form-group pull-right">
                            <label for="volume-control">Громкость</label>
                            <input id="volume-control" class="form-control" type=range min=0 max=1 step=0.01 ng-model="audioPlayer.volume"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row pekadev-audio-grid">
            <table class="table table-bordered table-condensed">
                <tr>
                    <th></th>
                    <th>Исполнитель</th>
                    <th>Название</th>
                    <th>Длительность</th>
                    <th>Ссылка</th>
                </tr>
                <tr ng-repeat="audio in audios">
                    <th><span class="glyphicon" ng-class="{'glyphicon-pause' : audio.playing, 'glyphicon-play': !audio.playing }" ng-click="togglePlayback(audio)"></span></th>
                    <td ng-bind="audio.artist"></td>
                    <td ng-bind="audio.title"></td>
                    <td class="text-center" ng-bind="audio.duration"></td>
                    <td class="text-center"><a ng-href="{{audio.url}}" download="">Скачать</a></td>
                </tr>
            </table>
        </div>
    </div>
</div>
</body>
</html>
